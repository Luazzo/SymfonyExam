{% for creature in creatures %}
	
	
	<div class="row">
		<div class="col-md-4">
			<a href="{{ path('app_creatures_show',{'id':creature.id,'slug':creature.slug}) }}">
				<img class="img-fluid rounded mb-3 mb-md-0" src="{{ asset('build/assets/images/'~creature.image) }}" alt="{{ creature.slug }}">
			</a>
		</div>
		<div class="col-md-8">
			<h3>{{ creature.nom }}</h3>
			<p class="lead">
				dans
				<a href="{{ path('app_films_show',{'id':creature.film.id,'slug':creature.film.slug}) }}">{{ creature.film.titre }}</a> le {{ creature.dateCreation | date('d-m-Y') }}
			</p>
			<p>{{ creature.texteLead }}</p>
			<a class="btn btn-primary" href="{{ path('app_creatures_show', {'id': creature.id, 'slug': creature.slug}) }}">Voir la crÃ©ature</a>
			<a class="btn btn-success" href="{{ path('app_creatures_edit', {'id': creature.id, 'slug': creature.slug}) }}">Modifier</a>
            {{ include('creatures/_delete_form.html.twig') }}
			<hr/>
			<ul class="list-inline tags">
				
				{% for tag in creature.tags %}
					<li>
						<a href="#" class="btn btn-default btn-xs">{{ tag.nom }}</a>
					</li>
				{% endfor %}
			
			</ul>
		</div>
	</div>
	
	<hr>

{% endfor %}